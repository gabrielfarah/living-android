<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="co.ar_smart.www.endpoints.EditDeviceActivity">
    <TextView
        android:id="@+id/labelName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="bottom"
        android:text="@string/lblnamedev"
        android:textColor="#848484"
        android:textSize="18sp" />
    <EditText
        android:id="@+id/txtNameDev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Select an icon for the new device:"
        android:textColor="#848484"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnEditIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/colorPrimaryDark"
        android:drawableEnd="@drawable/right_arrow_icon"
        android:text="@string/editicon_btntext"
        android:textColor="@color/blanco" />

    <TextView
        android:id="@+id/select_icon_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="The selected icon:"
        android:textColor="#848484"
        android:textSize="18sp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/selected_icon_image_view"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:src="@drawable/default_icon"
        android:tint="@android:color/darker_gray"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Select a room for the new device:"
        android:textColor="#848484"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnEditRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/colorPrimaryDark"
        android:drawableEnd="@drawable/right_arrow_icon"
        android:text="@string/editroom_btntext"
        android:textColor="@color/blanco" />

    <TextView
        android:id="@+id/select_room_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="The selected room:"
        android:textColor="#848484"
        android:textSize="18sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/selected_room_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#848484"
        android:textSize="18sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/save_device_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/activar"
        android:text="@string/save"
        android:textColor="@color/blanco" />

</LinearLayout>
