<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lbl_warning_del_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/toast_error_connecting_to_local_webserver"
        android:textAlignment="center"
        android:textColor="@color/secundario" />

    <Button
        android:id="@+id/local_configuration_button_accept"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:background="@drawable/dark_color_btn"
        android:text="@string/accept"
        android:textColor="#fff" />
</LinearLayout>