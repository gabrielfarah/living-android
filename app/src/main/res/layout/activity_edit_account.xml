<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="co.ar_smart.www.user.EditAccountActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_edit_user_first_name"
        android:id="@+id/edit_user_first_name_text_view"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:labelFor="@+id/edit_user_first_name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/label_edit_user_first_name_text_view"
        android:ems="10"
        android:id="@+id/edit_user_first_name"
        android:layout_below="@+id/edit_user_first_name_text_view"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_edit_user_last_name"
        android:id="@+id/edit_user_last_name_text_view"
        android:layout_below="@+id/edit_user_first_name"
        android:layout_centerHorizontal="true"
        android:labelFor="@+id/edit_user_last_name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/label_edit_user_last_name_text_view"
        android:ems="10"
        android:id="@+id/edit_user_last_name"
        android:layout_below="@+id/edit_user_last_name_text_view"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_edit_user_email"
        android:id="@+id/edit_user_email_text_view"
        android:layout_below="@+id/edit_user_last_name"
        android:layout_centerHorizontal="true"
        android:labelFor="@+id/edit_user_email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:text="@string/label_edit_user_email_text_view"
        android:id="@+id/edit_user_email"
        android:layout_below="@+id/edit_user_email_text_view"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_edit_user_button"
        android:id="@+id/edit_user_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
