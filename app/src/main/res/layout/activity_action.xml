<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/principal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="co.ar_smart.www.actions.ActionActivity">

    <TextView
        android:id="@+id/no_actions_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/no_actions_to_show_at_the_moment"
        android:textAllCaps="true"
        android:textColor="@color/blanco"
        android:textSize="26sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/no_actions_explanation_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/no_actions_text_view"
        android:gravity="center"
        android:text="@string/no_actions_recorded_explanation_text"
        android:textColor="@color/blanco"
        android:textSize="16sp"
        android:visibility="visible" />

    <ListView
        android:id="@+id/actions_list_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone" />

</RelativeLayout>
